{$i WindowOverlay/WindowOverlay.simba}

var
  Overlay: TWindowOverlay;
  MufasaBitmap: TMufasaBitmap;

begin
  Overlay := TWindowOverlay.Create();
  Overlay.PaintInterval(100);

  MufasaBitmap := Overlay.ToMufasaBitmap();
  MufasaBitmap.DrawText('Hello world', 'UpChars07', Point(5, 5), True, $000FF);

  while True do
    Wait(100);
end.
